<main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
  <div class="container-fluid p-4">
    <h1 class="pb-4">
      <%= title %>
    </h1>
    <div class="col-sm-7">
      <a href="/photos/add" class="btn btn-secondary">
        <i class="material-icons">&#xE147;</i> <span>Add New Photo</span>
      </a>
      <a href="#" class="btn btn-secondary">
        <i class="material-icons">&#xE24D;</i> <span>Export to Excel</span>
      </a>
    </div>
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>Id</th>
          <th>Título</th>
          <th>Descripción</th>
          <th>Ruta</th>
          <th>Fecha de creación</th>
          <th>Etiqueta</th>
        </tr>
      </thead>
      <tbody>
        <% arrFotos.forEach((foto)=> { %>
          <tr>
            <td>
              <%= foto.id %>
            </td>
            <td>
              <%= foto.titulo %>
            </td>
            <td>
              <%= foto.descripcion %>
            </td>
            <td>
              <%= foto.ruta %>
            </td>
            <td>
              <%= foto.createdAt.toLocaleDateString('en-US') %>
            </td>
            <td>
              <% if (foto.etiqueta && foto.etiqueta.length> 0) { %>
                <ul>
                  <% foto.etiqueta.forEach((etiqueta)=> { %>
                    <li>
                      <%= etiqueta.texto %>
                    </li>
                    <% }) %>
                </ul>
                <% } else { %>
                  <span class="text-muted">Sin etiquetas</span>
                  <% } %>
            </td>
          </tr>
          <% }); %>
      </tbody>
    </table>
  </div>
</main>