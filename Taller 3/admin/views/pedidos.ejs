<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pedidos</title>
    <%- include('../partials/header.html') %>
</head>

<body>
    <div class="container">
        <h1>Listado de pedidos</h1>

        <% if (pedidos.length===0) { %>
            <p>No hay pedidos registrados.</p>
            <% } else { %>
                <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Fecha</th>
                            <th>Cliente</th>
                            <th>Estado</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for (const pedido of pedidos) { %>
                            <tr>
                                <td>
                                    <%= pedido.Id %>
                                </td>
                                <td>
                                    <%= pedido.fecha %>
                                </td>
                                <td>
                                    <%= pedido.cliente %>
                                </td>
                                <td>
                                    <%= pedido.estado %>
                                </td>
                            </tr>
                            <% } %>
                    </tbody>
                </table>
                <% } %>
    </div>

    <%- include('../partials/footer.html') %>
</body>

</html>
